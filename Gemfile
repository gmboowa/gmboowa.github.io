source 'https://rubygems.org'

# Use Jekyll and specific plugins
gem 'jekyll', '~> 4.2'
gem 'jekyll-scholar', '~> 5.16' # Provides the `bibliography` tag
gem 'jekyll-feed', '~> 0.15'
gem 'jekyll-sitemap', '~> 1.4'
gem 'jekyll-seo-tag', '~> 2.7'
gem 'faraday-retry', '~> 1.0' # For Faraday middleware with retry support

group :jekyll_plugins do
  gem 'jekyll-toc' # For Table of Contents
  gem 'jekyll-paginate-v2'
  gem 'jekyll-minifier'
  gem 'jemoji'
  gem 'jekyll-twitter-plugin'
end

# Other plugins
gem 'mini_racer'
gem 'webrick' # Required for Jekyll in Ruby 3.x
gem 'nokogiri'

